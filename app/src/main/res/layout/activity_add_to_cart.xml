<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddToCartActivity">

    <TextView
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY CART"
        android:fontFamily="@font/bevan"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="22dp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name :- "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000">

                </TextView>

                <TextView
                    android:id="@+id/productnameTV"
                    android:text="dummy name"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Type :- "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000">

                </TextView>

                <TextView
                    android:id="@+id/producttypeTV"
                    android:text="dummy name"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Id :- "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000">

                </TextView>

                <TextView
                    android:id="@+id/productIdTV"
                    android:text="dummy name"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Price:- "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000">

                </TextView>

                <TextView
                    android:id="@+id/productPriceET"
                    android:text="dummy name"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Quantity :- "
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000">

                </TextView>

                <TextView
                    android:id="@+id/productQuantityTV1"
                    android:text="dummy name"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Item Count"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

            </TextView>

            <LinearLayout
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="22dp"
                    android:layout_margin="12dp">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/increment_one"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_plus_one_24">

                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:id="@+id/quantity_tv"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="22dp"
                    android:layout_margin="12dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:id="@+id/decrement_one"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_baseline_exposure_neg_1_24">

                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>